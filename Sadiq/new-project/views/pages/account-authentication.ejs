<%- include("../includes/header") %>

<div class="container" style="min-height: 600px;">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header text-center bg-primary"><h3 class="text-light">LOGIN</h3></div>
                <div class="card-body">
                    <% if (typeof status !== 'undefined' && status !== null){ %>
                        <% if(status == 200 && typeof token !== 'undefined'){ %>
                            <input type="hidden" id="token" value="<%= token %>" />
                            <div class="alert alert-success" role="alert">
                                Valid User
                            </div>
                        <% }else if(status == 403){ %>
                            <div class="alert alert-danger" role="alert">
                                Incorrect Gmail ID
                            </div>
                        <% }else if(status == 402){ %>
                            <div class="alert alert-danger" role="alert">
                                Incorrect Password
                            </div>
                        <% } %>
                    <% } %>
                    <form action="/account/authentication/signup" method="post"></form>
                        <div class="my-3">
                            <label>GMAIL ID</label>
                            <input type="text" name="gmail" value="<%= account.gmail %>" class="form-control" placeholder="Create User Name" />
                        </div>
                        <div class="my-3">
                            <label>PASSWORD</label>
                            <input type="text" name="password"  class="form-control" placeholder="Enter Password" />
                        </div>
                        <div class="card-footer">
                            <input type="submit" value="LOGIN" class="btn btn-info" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



<%- include("../includes/testimonial") %>
<%- include("../includes/footer") %>

<script>
    window.addEventListener( 'DOMContentLoaded', (event)=>{
        const statusElement = document.getElementById('status');
        const tokenElement = document.getElementById('token');

        if( token ){
            localStorage.setItem('token', tokenElement.value);
        }
        if( statusElement && tokenElement ){
            const status = parseInt(statusElement.value);
            const token = tokenElement.value;
            if( status == 200 ){
                localStorage.setItem('token', token);
            }
        }
    } )
</script>