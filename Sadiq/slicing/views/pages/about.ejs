<%- include('../include/header') %>

<div class="container" style="min-height: 600px;">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h1 class="text-center">JOIN US</h1>
        <div class="card my-5">
            <div class="card-header bg-secondary text-center"><h3 class="text-light">ENTER EMPLOYE DATA</h3></div>
            <div class="card-body">
            <form action="/store" method="post">
                <label>Full Name</label>
                <input type="text" name="fullname" class="form-control" placeholder="Enter Full Name" />

                <br />

                <label>Contact</label>
                <input type="number" name="contact" class="form-control" placeholder="Enter Your Contact Number" />

                <br />

                <label>Age Category</label>
                <br />
                12-17  <input type="radio" value="12-17" name="age"/>
                <br />
                18-28  <input type="radio" value="18-28" name="age"/>
                <br />
                29-45  <input type="radio" value="29-45" name="age"/>
                <br /> 
                45+  <input type="radio" value="45+" name="age"/>

                <br />
                <br />

                <label>Salary</label>
                <input type="number" name="salary" class="form-control" placeholder="Enter Salary" />

                <br />

                <label>City</label>
                <select class="form-control" name="city">
                    <option>SELECT</option>
                    <option>Indore</option>
                    <option>Mumbai</option>
                    <option>Pune</option>
                    <option>Ahmedabad</option>
                </select>
            
            </div>
            <div class="card-footer">
                <input type="submit" class="btn btn-outline-secondary" />
                <a href="/teams" class="btn btn-outline-success">meet our team</a>
            </form>
            </div>
        </div>
        </div>
    </div>
</div>


