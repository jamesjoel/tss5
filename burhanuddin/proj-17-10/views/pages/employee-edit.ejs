<%- include("../includes/header") %>

<form action="/info/update/<% data._id %>" method="post">
    <div class="container" id="header">
        <div class="row" >
        <div class="col-md-6 offset-md-3" >
                <div class="my-3">
                    <label for="">Name</label>
                    <input type="text" name="name" value="<%=data.name%>" class="form-controll">
                </div>
                <div class="my-3">
                    <label for="">Age</label>
                    <input type="number" name="age" value="<%=data.age%>" class="form-controll">
                </div>
                <div class="my-3">
                    <label for="">gender</label>
                    <% if(data.gender== "male"){ %>
                    Male<input type="radio" name="gender" id="gender" value="male" class="form-controll" checked>
                    Female<input type="radio" name="gender" id="gender" value="female" class="form-controll">
                    <% } else{ %>
                        Male<input type="radio" name="gender" id="gender" value="male" class="form-controll">
                        Female<input type="radio" name="gender" id="gender" value="female" checked class="form-controll">
                    <% } %>   
                
                </div>
                <div class="my-3">
                    <label for="">position</label>
                    <input type="text" name="position" value="<%=data.position%>" class="form-controll">
                </div>
                <br>
                <br>
                <input type="submit" value="Update" class="btn btn-primary">
            </div>
        </div>
        </div>
</form>



<%- include("../includes/footer") %>