<%- include("../includes/header") %>

<form action="/student/update/<%= data._id %>" method="post">
    <div class="container" id="header">
    <div class="row" >
    <div class="col-md-6 offset-md-3" >
            
                <div class="row">
                    <div class="container col-md-6 offset-md-3">
                        <div class="my-3">
                            <label for="">Name</label>
                            <input name="name" type="text" value="<%= data.name %>" class="form-controll"/>
                        </div>
                        <div class="my-3">
                            <label for="">Address</label>
                            <textarea name="address"><%= data.name %></textarea>
                        </div>
                        <div class="my-3">
                            <label for="">Fees</label>
                            <input name="fee" type="number" value="<%= data.fee %>" class="form-controll"/>
                        </div>
                        <br>
                        <input type="submit" value="Update" class="btn btn-primary">
                    </div>
                </div>
            </div>
    </form>    

    <%- include("../includes/footer") %>